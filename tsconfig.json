{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@pages/*": ["pages/*"],
        "@tests/*": ["tests/*"]
      }
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules"]
  }